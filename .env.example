# ==============================================================================
# SISInfo V2 - Variáveis de Ambiente (Template)
# ==============================================================================
# Copie para .env e configure os valores

# ==============================================================================
# DJANGO
# ==============================================================================
SECRET_KEY=sua-chave-secreta-aqui
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,*
DJANGO_SETTINGS_MODULE=core.settings.development

# ==============================================================================
# BANCO DE DADOS - PostgreSQL
# ==============================================================================
# Desenvolvimento (Supabase local): npx supabase start
POSTGRES_URL_NON_POOLING=postgresql://postgres:postgres@127.0.0.1:54322/postgres
POSTGRES_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres
# Produção (Supabase Cloud): configurar na Vercel

# ==============================================================================
# SUPABASE
# ==============================================================================
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=sua-anon-key
SUPABASE_SERVICE_ROLE_KEY=sua-service-role-key

# ==============================================================================
# MONGODB - Logs de Auditoria
# ==============================================================================
# Desenvolvimento (Docker): docker-compose up -d
DATABASE_MONGODB_LOGS=mongodb://sisinfo:sisinfo@localhost:27017/sisinfo_audit?authSource=admin
# Produção (Atlas): mongodb+srv://user:pass@cluster/db

# ==============================================================================
# UPSTASH REDIS - Cache (REST API)
# ==============================================================================
# Desenvolvimento (Docker): docker-compose up -d (usa Redis tradicional)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=True

# Produção (Upstash REST API): configurar na Vercel
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ==============================================================================
# UPSTASH QSTASH - Background Jobs
# ==============================================================================
# Desenvolvimento: npx @upstash/qstash-cli dev
QSTASH_URL=http://localhost:8080
QSTASH_TOKEN=

# Produção (Upstash): configurar na Vercel
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# ==============================================================================
# SENTRY - Error Tracking
# ==============================================================================
# Criar conta: https://sentry.io/signup/ (5.000 erros/mês grátis)
SENTRY_DSN=https://xxx@xxx.ingest.us.sentry.io/xxx

# ==============================================================================
# GEMINI - OCR de Notas Fiscais
# ==============================================================================
# Múltiplas chaves separadas por vírgula para rotação
GEMINI_API_KEY=chave1,chave2,chave3

# ==============================================================================
# OCR - Callback
# ==============================================================================
# Para Docker acessar Django no host
CALLBACK_BASE_URL=http://host.docker.internal:8000

# ==============================================================================
# BROWSERLESS - Geração de PDFs
# ==============================================================================
# Desenvolvimento (Docker): docker-compose up -d
BROWSERLESS_API_KEY=ws://localhost:3000?token=sisinfo_dev_token
# Produção (Browserless.io): sua-api-key

# ==============================================================================
# EMAIL
# ==============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/django.log
